@import "./define"

.bg
  margin:0px;
  width: 100%;
  height: 100%;
  background: url('../img/bg.jpg') center center no-repeat;
  background-size: cover;
  display: flex

.space
  flex: 1
  min-height: 100px

.space1
  flex: 1
  min-height: 50px

.left_menu
  flex: 3
  position: fixed
  left: 10%
  height: 500px;
  min-width: 200px
  font-size: 13px
  display: flex
  flex-direction: column

.tab
  flex: 8
  padding: 0px 0px 0px 250px
  height: 100%
  font-size: 13px
  display: flex
  flex-direction: column

.jd
  padding: 20px 10px 20px 10px
  font-size: 12pt
  line-height: 16pt
  text-align: left;

.jd_content
  padding: 0px 10px
  font-size: 11pt
  line-height: 16pt
  text-align: left;

.tabcontent
  flex: 7
  background-color: rgba(255,255,255,1)
  opacity: 0.8
  position: relative

.icon
  flex: 1
  min-height: 80px 
  .logo
    height: 50px;
    margin: 30px 0px 10px 0px;
    margin-left: -20px

.bgend
  width: 100%
  position: absolute
  left: 0
  bottom: 0  

.row
  flex: 4
  width: 100% 
  display: flex
  .col
    width: 15%
    display: flex
    flex-direction: column
  .content
    width: 85%
    font-size: 20px
    color: #fff
    font-weight: 500
    text-align: left
    margin: auto
    cursor: pointer
  &:first-child
    .line-top
      visibility: hidden
  &:last-child
    .line-bottom
      visibility: hidden

.stream
  .line 
    display: flex
    flex-direction: column
    flex: 1
    .dot
      flex: 1
      width: 10px
      height: 10px
      background-color: #fff
      border-radius: 50%
      margin-left: -4px
    .line-first-top
      flex: 4
      visibility: hidden
    .line-bottom-top
      flex: 4
      visibility: hidden
    .line-top
      flex: 4
      width: 2px
      background-color: #eeeeee
    .line-bottom
      flex: 4
      width: 2px
      background-color: #eeeeee

.home
  height: 100%
  width: 100%
  padding-left: 50px 
  position: absolute
  .swiper-container
    height: 100%
    width: 100%


.slide_c1
  position: absolute
  z-index: 100
  img
    width: auto
    background-size: cover
    box-shadow: 0px 0px 5px rgba(0,20,20,0.6)

.slide_c2
  position: absolute
  top: 100px
  left: 100px
  opacity: 0.8
  z-index: 80
  img
    width: auto
    background-size: cover
    box-shadow: 0px 0px 5px rgba(0,20,20,0.6)

.slide_c3
  position: absolute
  top: 200px
  left: 150px
  opacity: 0.5
  z-index: 50
  img
    width: auto
    background-size: cover
    box-shadow: 0px 0px 5px rgba(0,20,20,0.6)

