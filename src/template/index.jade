        .row.flex-row-between
          .col.stream.flex-row-center
            .line.flex-col-center
              .line-top
              .dot(:style="{'background-color': (tab==4?'#00e587':'#fff')}")
              .line-bottom-top
          a(@click='tabpage(4)', :style="{'color': (tab==4?'#00e587':'#fff')}").content JOIN US
