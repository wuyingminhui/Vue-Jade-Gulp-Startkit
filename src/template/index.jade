block body
  main-carousel
  #app.app(v-cloak)
    .bg(:style="{'display': (isMobile?'none':'')}")
      .space(:style="{'min-width': singlew}")
      .left_menu
        .icon
          img(src='../img/ubike_logo.png').logo
        .row.flex-row-between
          .col.stream.flex-row-center
            .line.flex-col-center
              .line-first-top
              .dot(:style="{'background-color': (tab==1?'#00e587':'#fff')}")
              .line-bottom
          a(@click='tabpage(1)', :style="{'color': (tab==1?'#00e587':'#fff')}").content HOME
        .row.flex-row-between
          .col.stream.flex-row-center
            .line.flex-col-center
              .line-top
              .dot(:style="{'background-color': (tab==2?'#00e587':'#fff')}")
              .line-bottom
          a(@click='tabpage(2)', :style="{'color': (tab==2?'#00e587':'#fff')}").content ABOUT US
        .row.flex-row-between
          .col.stream.flex-row-center
            .line.flex-col-center
              .line-top
              .dot(:style="{'background-color': (tab==3?'#00e587':'#fff')}")
              .line-bottom
